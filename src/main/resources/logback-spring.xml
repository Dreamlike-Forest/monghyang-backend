<configuration>
    <!-- 콘솔: Spring Boot 기본 설정(Property들: CONSOLE_LOG_PATTERN 등) -->
    <include resource="org/springframework/boot/logging/logback/defaults.xml"/>

    <!-- Spring Boot 기본 콘솔 Appender 사용 -->
    <include resource="org/springframework/boot/logging/logback/console-appender.xml"/>

    <!-- 운영용 JSON 파일 로그 -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/app.json</file>

        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>logs/app-%d{yyyy-MM-dd}.json.gz</fileNamePattern>
            <maxHistory>14</maxHistory>
        </rollingPolicy>

        <encoder class="net.logstash.logback.encoder.LoggingEventCompositeJsonEncoder">
            <providers>
                <timestamp timeZone="Asia/Seoul"/>
                <loggerName/>
                <threadName/>

                <!-- MDC: traceId, userId, roles 등 자동으로 포함 -->
                <mdc/>

                <!-- HTTP 서블릿 정보(있으면 포함) -->
                <arguments/> <!-- 로그 메시지에 전달된 {} 인자값 정보 -->
                <stackTrace/> <!-- 로그 메시지의 {} 인자로 예외 객체 자체를 넘기면 스택 트레이스 값 json으로 변환 -->
            </providers>
        </encoder>
    </appender>

    <!-- 로거 레벨 정리 (중복 로그 감소) -->
    <logger name="com.example.monghyang" level="INFO" additivity="false">
        <appender-ref ref="FILE"/>
        <appender-ref ref="CONSOLE"/>
    </logger>

    <logger name="org.springframework" level="INFO"/>
    <logger name="org.springframework.security" level="DEBUG"/>
    <logger name="org.hibernate" level="INFO"/>

    <!-- 4) root logger (기타 라이브러리) -->
<!--    <root level="INFO">-->
<!--        <appender-ref ref="FILE"/>-->
<!--    </root>-->

    <root level="WARN">
        <appender-ref ref="CONSOLE"/>
    </root>

</configuration>